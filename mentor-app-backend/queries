GET STUDENT - CREATE APPOINTMENT - INFO
query getAccountInfo {
  get_create_appointment_info(
    mentor_id: 1,
    course_id: 0,
  ) {
      mentor_username
    mentor_email
    course
    course_id
    price
    availableHours {
      day
      hour
      available_hours_id
    }
  }
}

