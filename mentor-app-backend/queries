
REGISTER MENTOR
# Write your query or mutation here
mutation getAccountInfo {
  register_mentor(
    first_name: "Ade",
    last_name: "Chan",
    email: "ade.chan1@com",
    password: "adeade",
   profile: {
    username: "adechan",
    profile_image: "imagetodo",
    country: "Romania",
    city: "Bacau",
    mentor_email: "adeade.mentor@com",
    hobbies: "Those are my hobbies",
    statement: "This is my statement",
    quote: "This is my quote"
  }
  ) {
    result
  }
}


